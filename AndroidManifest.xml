<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.manki.android.callcounter"
    android:versionCode="10"
    android:versionName="1.6.5" android:installLocation="auto">

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="11"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:backupAgent=".SettingsBackupAgent">
        <activity
            android:name=".CallCounterActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateUnchanged">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".CallTracker">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE"/>
            </intent-filter>
        </receiver>
        <meta-data android:name="com.google.android.backup.api_key"
            android:value="AEdPqrEAAAAIitqrpOTfA7K2LDHQw6J1j95uB0L7DZaTdMBMSA"/>
    </application>
</manifest>
